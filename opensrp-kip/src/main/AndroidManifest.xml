<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.smartregister.kip"
    tools:ignore="ImpliedTouchscreenHardware,MissingLeanbackLauncher,MissingLeanbackSupport">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name="org.smartregister.kip.application.KipApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ChildTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:theme">
        <activity
            android:name="org.smartregister.kip.activity.ReportRegisterActivity"
            android:theme="@style/ChildTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.kip.activity.ChildImmunizationActivity"
            android:label="@string/title_activity_child_immunization"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>
        <activity
            android:name="org.smartregister.kip.activity.LoginActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Login"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.smartregister.kip.activity.ChildRegisterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="fullSensor"
            android:theme="@style/ChildTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.kip.activity.ChildFormActivity"
            android:launchMode="singleTask"
            android:screenOrientation="fullSensor"
            android:theme="@style/ChildTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="org.smartregister.child.activity.BaseChildFormActivity"
            android:launchMode="singleTask"
            android:screenOrientation="fullSensor"
            android:theme="@style/ChildTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="org.smartregister.kip.activity.ChildDetailTabbedActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/ChildTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="org.smartregister.kip.activity.ChildProfileActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/ChildTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="org.smartregister.kip.activity.HIA2ReportsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ChildTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="org.smartregister.kip.activity.ReportSummaryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ChildTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="org.smartregister.kip.activity.KipJsonFormReportsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ChildTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <activity
            android:name="org.smartregister.kip.view.StatsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.vijay.jsonwizard.activities.JsonFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.vijay.jsonwizard.activities.JsonWizardFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="org.smartregister.kip.activity.SmsActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/ChildTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/captured_images_path" />
        </provider>

        <!--   STOCK CONTROL     -->
        <activity
            android:name=".activity.KipStockActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitle.NoActionBar" />
        <activity
            android:name="org.smartregister.stock.activity.StockControlActivity"
            android:label="@string/title_activity_stock_control"
            android:theme="@style/AppThemeNoTitle.NoActionBar" />
        <activity
            android:name="org.smartregister.stock.activity.StockJsonFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <!-- OPD ACTIVITIES -->
        <activity
            android:name="org.smartregister.kip.activity.AllClientsRegisterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/ChildTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.kip.activity.KipOpdRegisterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/ChildTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.kip.activity.OpdFormActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/ChildTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.opd.activity.BaseOpdProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/ChildTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.kip.activity.KipOpdProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            tools:replace="android:theme" />
        <!-- END OF OPD ACTIVITIES -->
        <activity
            android:name=".activity.EditJsonFormActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".activity.Covid19VaccineStockSettingsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activity.Covid19VaccineStockSettingsEnterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activity.Covid19VaccineStockSettingsExitActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name="org.smartregister.immunization.service.intent.VaccineIntentService" />
        <service android:name="org.smartregister.immunization.service.intent.RecurringIntentService" />
        <service android:name="org.smartregister.growthmonitoring.service.intent.ZScoreRefreshIntentService" />
        <service android:name="org.smartregister.growthmonitoring.service.intent.WeightIntentService" />
        <service android:name="org.smartregister.growthmonitoring.service.intent.HeightIntentService" />
        <service android:name="org.smartregister.sync.intent.PullUniqueIdsIntentService" />
        <service android:name="org.smartregister.sync.intent.ValidateIntentService" />
        <service android:name="org.smartregister.sync.intent.ExtendedSyncIntentService" />
        <service android:name="org.smartregister.sync.intent.SettingsSyncIntentService" />
        <service android:name="org.smartregister.sync.intent.SyncIntentService" />
        <service android:name=".service.intent.LocationsIntentService" />
        <service android:name="org.smartregister.kip.service.intent.RelationshipTypesIntentService" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="3f94f9c3caeff331b3a2bd8c2182b663ad6a955a" />

        <!--        <meta-data-->
        <!--            android:name="com.google.android.gms.version"-->
        <!--            android:value="@integer/google_play_services_version" />-->
    </application>

</manifest>