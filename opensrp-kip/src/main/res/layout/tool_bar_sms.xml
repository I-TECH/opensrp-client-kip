<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/customAppThemeBlue">

    <ImageButton
        android:id="@+id/close_advocacy_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/characteristics_drawable_padding"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_cross_white" />

    <TextView
        android:id="@+id/advocacy_sms"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/close_advocacy_sms"
        android:gravity="center_vertical"
        android:text="Advocacy SMS"
        android:textColor="@color/white"
        android:textSize="@dimen/characteristics_text_size" />

    <TextView
        android:id="@+id/select_clients"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/characteristics_edit_button_margin_right"
        android:gravity="center_vertical"
        android:text="Select Clients"
        android:textAllCaps="true"
        android:clickable="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white" />


</RelativeLayout>