<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/adapter_divider_bottom"
        android:layout_width="wrap_content"
        android:layout_height="0.25dp"
        android:background="@color/light_grey" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/age"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:ellipsize="marquee"
            android:paddingBottom="@dimen/moh710_vertical_margin"
            android:paddingLeft="@dimen/moh710_padding_left"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/moh710_vertical_margin"
            android:text="@string/under_1_year"
            android:textColor="@color/black"
            android:textSize="17sp" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/value"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/moh710_vertical_margin"
            android:paddingLeft="@dimen/moh710_padding_left"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/moh710_vertical_margin"
            android:text="@string/n_a"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>
</LinearLayout>